---
title: Projects
---

      <article>
        <h2>Validator Wants a Heading</h2>
        <p><%= lorem.sentences 3 %></p>
        <aside>
          <q><%= lorem.sentences 3 %>.</q>
        </aside>
        <p><%= lorem.sentences 5 %></p>
        <p><%= lorem.sentences 2 %></p>
      </article>

<% data.projects.project.each do |f| %>
      <article class="project">
        <h2><%= f['name'] %></h2>
        <figure>
          <a href="<%= "projects/#{f['name'].gsub(/\s/,'-').downcase}.html" %>"><img src="images/<%= f['image'] %>" alt="photo of a <%= f['name'] %>"></a>
          <figcaption>Completed on <time datetime="<%= DateTime.parse(f['date'].to_s).strftime('%F') %>"><%= DateTime.parse(f['date'].to_s).strftime('%-d %B %Y') %></time> by <%= f['artist'] %></figcaption>
        </figure>
        <% 7.times do %>
        <p><%= lorem.sentences 5 %>.</p>
        <% end %>
        <p><%= lorem.sentences 2 %> <%= link_to 'read more...', "projects/#{f['name'].gsub(/\s/,'-').downcase}.html" %></p>
      </article>
<% end %>